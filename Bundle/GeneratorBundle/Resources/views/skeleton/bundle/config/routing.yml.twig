admin.{{ bundle.alias }}.index:
    path: /admin/{{ bundle.alias }}/index
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:indexAction'
    options:
        require_admin_permission: {{ bundle.alias }}.index

admin.{{ bundle.alias }}.grid:
    path: /grid
    condition: "request.isXmlHttpRequest()"
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:gridAction'
    options:
        expose: true
        require_admin_permission: {{ bundle.alias }}.index

admin.{{ bundle.alias }}.add:
    path: /add
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:addAction'
    options:
        require_admin_permission: {{ bundle.alias }}.add

admin.{{ bundle.alias }}.edit:
    path: '/edit/{id}'
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:editAction'
    options:
        expose: true
        require_admin_permission: {{ bundle.alias }}.edit
        
admin.{{ bundle.alias }}.delete:
    path: '/delete/{id}'
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:deleteAction'
    options:
        expose: true
        require_admin_permission: {{ bundle.alias }}.delete

admin.{{ bundle.alias }}.delete_group:
    path: '/delete_group'
    defaults:
        _controller: '{{ bundle.alias }}.controller.admin:deleteGroupAction'
    options:
        expose: true
        require_admin_permission: {{ bundle.alias }}.delete

front.{{ bundle.alias }}.index:
    path: '/{{ bundle.alias }}/index'
    defaults:
        _controller: '{{ bundle.alias }}.controller.front:indexAction'

front.{{ bundle.alias }}.view:
    path: '/{{ bundle.alias }}/view/{id}'
    defaults:
        _controller: '{{ bundle.alias }}.controller.front:viewAction'
