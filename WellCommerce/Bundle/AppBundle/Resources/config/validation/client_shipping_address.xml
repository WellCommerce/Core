<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="WellCommerce\Bundle\AppBundle\Entity\ClientShippingAddress">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.first_name_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.last_name_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="line1">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.line1_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="line2">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.line2_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="postalCode">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.postal_code_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
                <option name="message">client_shipping_address.city_empty</option>
            </constraint>
            <constraint name="NotNull">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
        <property name="country">
            <constraint name="Country">
                <option name="groups">
                    <value>order_shipping_address</value>
                    <value>client_address_book</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
